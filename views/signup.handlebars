<!-- html template for signing up -->
<!--
WHEN I choose to sign up
THEN I am prompted to create a username and password
WHEN I click on the sign-up button
THEN my user credentials are saved and I am logged into the site
-->

<h2>Sign Up</h2>

<form class="form sign-up-form">
  <div class="form-group">
    <label for="username-login">username:</label>
    <input class="form-input" type="text" id="username-login" />
  </div>
  <div class="form-group">
    <label for="password-login">password:</label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit" id="login">Login instead</button>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit" id="signup">Sign Up</button>
  </div>
</form>

<script src="/js/signup.js"></script>