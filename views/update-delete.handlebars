<!-- WHEN I click on one of my existing posts in the dashboard
THEN I am able to delete or update my post and taken back to an updated dashboard -->

<div class="card">
  <h3 class="card-header">Edit Post</h3>
  <form class="card-body edit-post-form">
    <label for="post-title" class="form-label">Title</label>
    <input
      name="post-title"
      type="text"
      value="{{blog.blog_name}}"
      class="form-input"
    />
    <label class="form-label" for="content">Content</label>
    <input
      name="content"
      type="text"
      value="{{blog.blog_content}}"
      class="form-input"
    />
    <button type="submit" class="btn">Update Post</button>
    <button type="button" class="delete-post-btn btn">Delete Post</button>
  </form>
</div>

{{#if loggedIn}}
  <script src="../public/js/edit-post.js"></script>
  <script src="../public/js/delete-post.js"></script>
{{/if}}